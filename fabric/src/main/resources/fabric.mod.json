{
  "schemaVersion": 1,
  "id": "disguiselib",
  "version": "${version}",

  "name": "Disguise Library",
  "description": "A (server-side) library for disguising entities in Minecraft.",
  "authors": [
    "samo_lego"
  ],
  "contact": {
    "homepage": "https://nucleoid.xyz/",
    "sources": "https://github.com/NucleoidMC/DisguiseLib"
  },

  "license": "MIT",
  "icon": "assets/disguiselib/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "xyz.nucleoid.disguiselib.DisguiseLibFabric"
    ]
  },
  "mixins": [
    "disguiselib.mixins.json"
  ],

  "custom": {
    "modmenu": {
      "badges": [
        "library"
      ]
    }
  },

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*"
  }
